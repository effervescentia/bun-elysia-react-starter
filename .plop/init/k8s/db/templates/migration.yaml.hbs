apiVersion: batch/v1
kind: Job
metadata:
  name: "\{{ include "{{kebabCase name}}-db.fullname" . }}-migration"
  labels:
    \{{- include "{{kebabCase name}}-db.labels" . | nindent 4 }}
  annotations:
    "helm.sh/hook": post-install,post-upgrade
    "helm.sh/hook-weight": "1"
spec:
  template:
    metadata:
      labels:
        \{{- include "{{kebabCase name}}-db.labels" . | nindent 8 }}
    spec:
      containers:
      - name: "\{{ .Chart.Name }}-migration"
        image: "\{{ .Values.migration.image.repository }}:\{{ .Values.migration.image.tag | default .Chart.AppVersion }}"
        imagePullPolicy: \{{ .Values.migration.image.pullPolicy }}
        envFrom:
          - secretRef:
              name: "\{{ include "{{kebabCase name}}-db.fullname" . }}-migration-secrets"
          - configMapRef:
              name: "\{{ include "{{kebabCase name}}-db.fullname" . }}-migration-config"
      restartPolicy: Never
