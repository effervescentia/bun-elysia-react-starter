apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: \{{ include "{{kebabCase name}}-api.fullname" . }}
  labels:
    \{{- include "{{kebabCase name}}-api.labels" . | nindent 4 }}
spec:
  parentRefs:
    - name: \{{ .Values.gateway.name }}
      namespace: \{{ .Values.gateway.namespace }}
      sectionName: \{{ .Values.gateway.sectionName }}
  hostnames:
    - \{{ .Values.route.hostname }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: \{{ include "{{kebabCase name}}-api.fullname" . }}
          port: \{{ .Values.service.port }}
