apiVersion: v1
kind: Secret
type: kubernetes.io/tls
metadata:
  name: "\{{ include "{{kebabCase name}}-api.fullname" . }}-tls"
  namespace: \{{ .Values.tls.namespace }}
  labels:
    \{{- include "{{kebabCase name}}-api.labels" . | nindent 4 }}
data:
  tls.crt: "ref+sops://k8s/secrets.yaml#/API_TLS_CERT"
  tls.key: "ref+sops://k8s/secrets.yaml#/API_TLS_KEY"
