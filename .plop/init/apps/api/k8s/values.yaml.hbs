replicaCount: 1

image:
  repository: ''
  pullPolicy: IfNotPresent
  tag: ''

nameOverride: ''
fullnameOverride: ''

podAnnotations: {}
podLabels: {}

service:
  port: 8080

health:
  enabled: true

gateway:
  name: traefik-gateway
  namespace: traefik
  sectionName: api

route:
  hostname: api.{{kebabCase name}}.localhost

tls:
  namespace: traefik

web:
  origin: https://app.{{kebabCase name}}.localhost:1337

postgres:
  hostname: db-postgres
  port: 5432
  database: {{snakeCase name}}
  username: {{snakeCase name}}

redis:
  hostname: db-redis-master
  port: 6379
  username: default

account:
  alias:
    max: 3
    expiry:
      short: 1d
      long: 1mo
