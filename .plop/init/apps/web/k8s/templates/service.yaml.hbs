apiVersion: v1
kind: Service
metadata:
  name: \{{ include "{{kebabCase name}}-web.fullname" . }}
  labels:
    \{{- include "{{kebabCase name}}-web.labels" . | nindent 4 }}
spec:
  ports:
    - port: \{{ .Values.service.port }}
      targetPort: http
      protocol: TCP
      name: http
    \{{- if .Values.health.enabled }}
    - port: \{{ .Values.health.port }}
      targetPort: http-health
      protocol: TCP
      name: http-health
    \{{- end }}
  selector:
    app.kubernetes.io/component: server
    \{{- include "{{kebabCase name}}-web.selectorLabels" . | nindent 4 }}
