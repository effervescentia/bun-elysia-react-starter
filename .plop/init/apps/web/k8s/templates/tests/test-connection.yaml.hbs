apiVersion: v1
kind: Pod
metadata:
  name: "\{{ include "{{kebabCase name}}-web.fullname" . }}-test-connection"
  labels:
    app.kubernetes.io/component: test
    \{{- include "{{kebabCase name}}-web.labels" . | nindent 4 }}
  annotations:
    "helm.sh/hook": test
    "helm.sh/hook-delete-policy": hook-succeeded
spec:
  containers:
    - name: index-html
      image: busybox
      command: ['wget']
      args: ['\{{ include "{{kebabCase name}}-web.fullname" . }}:\{{ .Values.service.port }}/index.html']
    - name: env-js
      image: busybox
      command: ['wget']
      args: ['\{{ include "{{kebabCase name}}-web.fullname" . }}:\{{ .Values.service.port }}/env.js']
  restartPolicy: Never
