{
  "name": "app",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*",
    "meta/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "check": "biome check --use-editorconfig true",
    "dev": "turbo run dev",
    "format": "biome format --use-editorconfig true",
    "lint": "biome lint",
    "plop": "NODE_OPTIONS='--import tsx' plop --plopfile=plopfile.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.5",
    "@tsconfig/bun": "1.0.7",
    "@types/bun": "1.1.14",
    "fast-glob": "3.3.3",
    "plop": "4.0.1",
    "tsx": "4.19.4",
    "turbo": "2.5.2",
    "typescript": "5.7.2"
  },
  "overrides": {
    "@sinclair/typebox": "0.32.34"
  },
  "packageManager": "bun@1.2.11"
}
